//mark 6 armor class
package modding.ironman;
import net.minecraft.client.renderer.texture.IconRegister;
import net.minecraft.entity.Entity;
import net.minecraft.item.EnumArmorMaterial;
import net.minecraft.item.ItemArmor;
import net.minecraft.item.ItemStack;

public class Mark6Armor extends ItemArmor {
    
    
    public Mark6Armor(int par1, EnumArmorMaterial par2EnumArmorMaterial,
int par3, int par4) {
super(par1, par2EnumArmorMaterial, par3, par4);
}
public String getArmorTexture(ItemStack stack, Entity entity, int slot,
int layer) {
if (stack.itemID == mainclass.Mark6Helmet.itemID
|| stack.itemID == mainclass.Mark6Chestplate.itemID
|| stack.itemID == mainclass.Mark6Boots.itemID) {
return "minecraft:textures/armor/mk6_1.png";
}
if (stack.itemID == mainclass.Mark6Leggings.itemID) {
return "minecraft:textures/armor/mk6_2.png";
} else {
return null;
}

}
public void registerIcons(IconRegister reg) { // Make sure to import IconRegister!
if (itemID == mainclass.Mark6Chestplate.itemID) {
this.itemIcon = reg.registerIcon("Mark6Chestplate"); // You can also replace blockID and blockIcon with itemID and itemIcon
}

if (itemID == mainclass.Mark6Leggings.itemID) {
this.itemIcon = reg.registerIcon("Mark6Pants"); // You can also replace blockID and blockIcon with itemID and itemIcon
}

if (itemID == mainclass.Mark6Boots.itemID) {
this.itemIcon = reg.registerIcon("Mark6Boots"); // You can also replace blockID and blockIcon with itemID and itemIcon
}

if (itemID == mainclass.Mark6Helmet.itemID) {
this.itemIcon = reg.registerIcon("Mark6Helmet"); // You can also replace blockID and blockIcon with itemID and itemIcon
}

}
}